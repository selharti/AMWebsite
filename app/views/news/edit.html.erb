<h1>Editing news</h1>

<% form_for(@news_item, :url => { :action => "update" }) do |f|%> 
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :datetime %><br />
    <%= f.datetime_select :datetime %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', news_item_path(@news_item) %> |
<%= link_to 'Back', news_path %>