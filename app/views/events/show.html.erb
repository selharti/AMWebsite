<h1>Event: <%=h @event.name %></h1>
<%= link_to 'Edit', edit_event_path(@event) %>
|<%= link_to 'Back', events_path %>
| <% if current_user != nil and @event.is_user_registred (current_user) %>
Vous êtes déjà enregistré pour cet événement<%= button_to 'Unregister', :action => :unregister, :id => @event.id %>
<% else %>
<%= button_to 'Register', :action => :register, :id => @event.id %>
<% end %>
<table valign=top>
    <tr>
        <td>
            <p class="post-date">
                <br>
                <span class="month"><%=h @event.datetime.day %></span>
                <span class="month"><%=h @event.datetime.month %></span>
                <span class="month"><%=h @event.datetime.year %></span>
            </p>
        </td>
        <td>
            <p>
                <b>Name:</b>
                <%=h @event.name %>
            </p>
            <p>
                <b>Description:</b>
                <%=h @event.description %>
            </p>
        </td>
        <td>
            <b>Prix:</b>
            <%=h h_price(@event.price) %>
        </td>
    </tr>
	<tr><td colspan=3 >Assistance: <%=h @event.users.count%></td></tr>
	<tr><td colspan=3 >
		<%for @user in @event.users %>
		<%=h @user.to_s  %> |
		<% end %> </td>
	</tr>
</table>
